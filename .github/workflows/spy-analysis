name: SPY Options Analysis

on:
  workflow_dispatch:

jobs:
  analyze:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout your repo
        uses: actions/checkout@v4

      - name: Install Git LFS
        run: |
          sudo apt-get update
          sudo apt-get install git-lfs -y
          git lfs install

      - name: Clone SPY dataset (with LFS)
        run: |
          git clone --depth 1 https://github.com/philippdubach/options-dataset-hist.git

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          pip install pandas pyarrow

      - name: Run analysis
        run: python spy_analysis.py

      - name: Upload results
        uses: actions/upload-artifact@v4
        with:
          name: spy-results
          path: output/
